# SaleWatcher Dashboard Environment Variables
# Copy this file to .env.local and fill in your values

# =============================================================================
# API CONNECTION
# =============================================================================

# Backend API URL - MUST include the protocol (http:// or https://)
#
# Local development:
#   NEXT_PUBLIC_API_URL=http://localhost:8000
#
# Production (Railway):
#   NEXT_PUBLIC_API_URL=https://your-backend.up.railway.app
#
# IMPORTANT: Always include https:// for production URLs!
# Wrong: backend-production-xxxx.up.railway.app
# Right: https://backend-production-xxxx.up.railway.app
NEXT_PUBLIC_API_URL=http://localhost:8000

# =============================================================================
# OPTIONAL SETTINGS
# =============================================================================

# Enable debug logging in browser console
# NEXT_PUBLIC_DEBUG=true
